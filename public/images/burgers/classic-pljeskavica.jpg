<svg xmlns="http://www.w3.org/2000/svg" width="300" height="300" viewBox="0 0 300 300">
  <!-- Background -->
  <rect width="300" height="300" fill="#f5f5f5"/>
  
  <!-- Plate -->
  <ellipse cx="150" cy="180" rx="120" ry="40" fill="#e0e0e0"/>
  
  <!-- Lepinja (Flatbread) -->
  <ellipse cx="150" cy="165" rx="90" ry="25" fill="#f9e8c7"/>
  
  <!-- Pljeskavica (Meat patty) -->
  <ellipse cx="150" cy="155" rx="75" ry="15" fill="#a64b2a"/>
  
  <!-- Kajmak (cream) spots -->
  <circle cx="130" cy="145" r="10" fill="#fff9e6"/>
  <circle cx="170" cy="145" r="8" fill="#fff9e6"/>
  <circle cx="145" cy="140" r="7" fill="#fff9e6"/>
  
  <!-- Onions -->
  <ellipse cx="120" cy="145" rx="15" ry="5" fill="#f0f0f0" transform="rotate(-10 120 145)"/>
  <ellipse cx="180" cy="145" rx="15" ry="5" fill="#f0f0f0" transform="rotate(10 180 145)"/>
  
  <!-- Text Label -->
  <text x="150" y="250" font-family="Arial, sans-serif" font-size="16" text-anchor="middle" fill="#333">
    Classic Pljeskavica
  </text>
</svg>
