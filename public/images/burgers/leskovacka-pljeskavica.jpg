<svg xmlns="http://www.w3.org/2000/svg" width="300" height="300" viewBox="0 0 300 300">
  <!-- Background -->
  <rect width="300" height="300" fill="#f5f5f5"/>
  
  <!-- Plate -->
  <ellipse cx="150" cy="180" rx="120" ry="40" fill="#e0e0e0"/>
  
  <!-- Lepinja (Flatbread) -->
  <ellipse cx="150" cy="165" rx="90" ry="25" fill="#f9e8c7"/>
  
  <!-- Pljeskavica (Meat patty) -->
  <ellipse cx="150" cy="155" rx="75" ry="15" fill="#8c3c1c"/>
  
  <!-- Hot peppers -->
  <ellipse cx="120" cy="145" rx="10" ry="3" fill="#d13c3c"/>
  <ellipse cx="140" cy="140" rx="8" ry="3" fill="#d13c3c"/>
  <ellipse cx="160" cy="145" rx="10" ry="3" fill="#d13c3c"/>
  <ellipse cx="180" cy="143" rx="8" ry="3" fill="#d13c3c"/>
  
  <!-- Spices visible on top -->
  <circle cx="125" cy="140" r="1" fill="#5a3825"/>
  <circle cx="135" cy="138" r="1" fill="#5a3825"/>
  <circle cx="145" cy="135" r="1" fill="#5a3825"/>
  <circle cx="155" cy="137" r="1" fill="#5a3825"/>
  <circle cx="165" cy="138" r="1" fill="#5a3825"/>
  <circle cx="175" cy="140" r="1" fill="#5a3825"/>
  
  <!-- Steam/spice effect -->
  <path d="M 130,130 Q 140,120 150,130 Q 160,120 170,130" fill="none" stroke="#ff6b6b" stroke-width="1" opacity="0.6"/>
  <path d="M 135,125 Q 145,115 155,125 Q 165,115 175,125" fill="none" stroke="#ff6b6b" stroke-width="1" opacity="0.6"/>
  
  <!-- Text Label -->
  <text x="150" y="250" font-family="Arial, sans-serif" font-size="16" text-anchor="middle" fill="#333">
    Leskovačka Pljeskavica
  </text>
</svg>
