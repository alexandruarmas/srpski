  <path d="M 130,145 C 135,140 145,142 150,140 C 155,142 165,140 170,145" fill="none" stroke="#fffacd" stroke-width="3"/>
  <path d="M 140,143 C 145,138 150,140 155,138 C 160,140 165,138 170,143" fill="none" stroke="#fffaee" stroke-width="2"/>
  
  <!-- Text Label -->
